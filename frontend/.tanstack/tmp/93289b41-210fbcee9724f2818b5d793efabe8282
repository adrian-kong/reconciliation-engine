import { createFileRoute } from "@tanstack/react-router";
import { useState } from "react";
import { useMutation, useQueryClient } from "@tanstack/react-query";
import { Upload, Check, X, File } from "lucide-react";
import { Button } from "@/components/ui/button";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { importInvoices, importPayments } from "@/lib/api";
import { cn } from "@/lib/utils";
import type { Invoice, Payment } from "@/types";

export const Route = createFileRoute("/dashboard/import")({
  component: Import,
});

interface ParsedData {
  invoices?: Omit<Invoice, "id" | "createdAt" | "updatedAt">[];
  payments?: Omit<Payment, "id" | "createdAt" | "updatedAt">[];
}

export function Import() {
  const queryClient = useQueryClient();
  const [dragActive, setDragActive] = useState(false);
  const [selectedFile, setSelectedFile] = useState<File | null>(null);
  const [parsedData, setParsedData] = useState<ParsedData | null>(null);
  const [parseError, setParseError] = useState<string | null>(null);
  const [importType, setImportType] = useState<"invoices" | "payments">(
    "invoices"
  );
  const [importSuccess, setImportSuccess] = useState<string | null>(null);

  const importInvoicesMutation = useMutation({
    mutationFn: (invoices: Omit<Invoice, "id" | "createdAt" | "updatedAt">[]) =>
      importInvoices(invoices),
    onSuccess: (data) => {
      queryClient.invalidateQueries({ queryKey: ["invoices"] });
      queryClient.invalidateQueries({ queryKey: ["dashboard-stats"] });
      setImportSuccess(`Imported ${data.invoices.length} invoices`);
      setParsedData(null);
      setSelectedFile(null);
    },
  });

  const importPaymentsMutation = useMutation({
    mutationFn: (payments: Omit<Payment, "id" | "createdAt" | "updatedAt">[]) =>
      importPayments(payments),
    onSuccess: (data) => {
      queryClient.invalidateQueries({ queryKey: ["payments"] });
      queryClient.invalidateQueries({ queryKey: ["dashboard-stats"] });
      setImportSuccess(`Imported ${data.payments.length} payments`);
      setParsedData(null);
      setSelectedFile(null);
    },
  });

  const handleDrag = (e: React.DragEvent) => {
    e.preventDefault();
    e.stopPropagation();
    if (e.type === "dragenter" || e.type === "dragover") {
      setDragActive(true);
    } else if (e.type === "dragleave") {
      setDragActive(false);
    }
  };

  const handleDrop = (e: React.DragEvent) => {
    e.preventDefault();
    e.stopPropagation();
    setDragActive(false);

    if (e.dataTransfer.files && e.dataTransfer.files[0]) {
      handleFile(e.dataTransfer.files[0]);
    }
  };

  const handleFileInput = (e: React.ChangeEvent<HTMLInputElement>) => {
    if (e.target.files && e.target.files[0]) {
      handleFile(e.target.files[0]);
    }
  };

  const handleFile = async (file: File) => {
    setSelectedFile(file);
    setParseError(null);
    setImportSuccess(null);
    setParsedData(null);

    try {
      const text = await file.text();
      const data = JSON.parse(text);

      if (importType === "invoices") {
        const invoices = Array.isArray(data) ? data : data.invoices;
        if (!invoices) throw new Error("Invalid format");
        setParsedData({ invoices });
      } else {
        const payments = Array.isArray(data) ? data : data.payments;
        if (!payments) throw new Error("Invalid format");
        setParsedData({ payments });
      }
    } catch (err) {
      setParseError(
        err instanceof Error ? err.message : "Failed to parse file"
      );
    }
  };

  const handleImport = () => {
    if (importType === "invoices" && parsedData?.invoices) {
      importInvoicesMutation.mutate(parsedData.invoices);
    } else if (importType === "payments" && parsedData?.payments) {
      importPaymentsMutation.mutate(parsedData.payments);
    }
  };

  const clearFile = () => {
    setSelectedFile(null);
    setParsedData(null);
    setParseError(null);
    setImportSuccess(null);
  };

  return (
    <div className="space-y-6 animate-fade-in">
      {/* Header */}
      <div>
        <h1 className="text-2xl font-semibold tracking-tight">Import</h1>
        <p className="text-muted-foreground text-sm mt-1">Upload data files</p>
      </div>

      {/* Success Message */}
      {importSuccess && (
        <div className="flex items-center gap-2 rounded-lg border border-emerald-500/20 bg-emerald-500/10 p-4">
          <Check className="h-4 w-4 text-emerald-500" />
          <p className="text-sm text-emerald-500">{importSuccess}</p>
          <button
            onClick={() => setImportSuccess(null)}
            className="ml-auto text-emerald-500 hover:text-emerald-400"
          >
            <X className="h-4 w-4" />
          </button>
        </div>
      )}

      {/* Tabs */}
      <Tabs
        value={importType}
        onValueChange={(v) => {
          setImportType(v as "invoices" | "payments");
          clearFile();
        }}
      >
        <TabsList>
          <TabsTrigger value="invoices">Invoices</TabsTrigger>
          <TabsTrigger value="payments">Payments</TabsTrigger>
        </TabsList>

        <TabsContent value="invoices" className="space-y-4 mt-4">
          <UploadArea
            dragActive={dragActive}
            onDrag={handleDrag}
            onDrop={handleDrop}
            onFileInput={handleFileInput}
          />

          {selectedFile && (
            <FilePreview file={selectedFile} onClear={clearFile} />
          )}

          {parseError && (
            <div className="rounded-lg border border-red-500/20 bg-red-500/10 p-4">
              <p className="text-sm text-red-500">{parseError}</p>
            </div>
          )}

          {parsedData?.invoices && (
            <div className="space-y-4">
              <p className="text-sm text-muted-foreground">
                {parsedData.invoices.length} invoices ready to import
              </p>
              <Button
                onClick={handleImport}
                disabled={importInvoicesMutation.isPending}
                size="sm"
              >
                {importInvoicesMutation.isPending ? "Importing..." : "Import"}
              </Button>
            </div>
          )}
        </TabsContent>

        <TabsContent value="payments" className="space-y-4 mt-4">
          <UploadArea
            dragActive={dragActive}
            onDrag={handleDrag}
            onDrop={handleDrop}
            onFileInput={handleFileInput}
          />

          {selectedFile && (
            <FilePreview file={selectedFile} onClear={clearFile} />
          )}

          {parseError && (
            <div className="rounded-lg border border-red-500/20 bg-red-500/10 p-4">
              <p className="text-sm text-red-500">{parseError}</p>
            </div>
          )}

          {parsedData?.payments && (
            <div className="space-y-4">
              <p className="text-sm text-muted-foreground">
                {parsedData.payments.length} payments ready to import
              </p>
              <Button
                onClick={handleImport}
                disabled={importPaymentsMutation.isPending}
                size="sm"
              >
                {importPaymentsMutation.isPending ? "Importing..." : "Import"}
              </Button>
            </div>
          )}
        </TabsContent>
      </Tabs>

      {/* Format Info */}
      <div className="rounded-lg border border-border p-4">
        <p className="text-sm font-medium">Expected Format</p>
        <p className="text-xs text-muted-foreground mt-1">
          JSON array or object with "{importType}" key
        </p>
        <pre className="mt-4 text-xs text-muted-foreground bg-accent/50 p-3 rounded-md overflow-x-auto">
          {importType === "invoices"
            ? `[
  {
    "invoiceNumber": "INV-001",
    "vendorName": "Vendor",
    "vendorId": "V001",
    "amount": 1000,
    "currency": "USD",
    "issueDate": "2024-01-01",
    "dueDate": "2024-01-31",
    "description": "Description",
    "lineItems": [],
    "status": "pending"
  }
]`
            : `[
  {
    "paymentReference": "PAY-001",
    "payerName": "Payer",
    "payerId": "P001",
    "amount": 1000,
    "currency": "USD",
    "paymentDate": "2024-01-15",
    "paymentMethod": "bank_transfer",
    "description": "Description",
    "status": "pending"
  }
]`}
        </pre>
      </div>
    </div>
  );
}

function UploadArea({
  dragActive,
  onDrag,
  onDrop,
  onFileInput,
}: {
  dragActive: boolean;
  onDrag: (e: React.DragEvent) => void;
  onDrop: (e: React.DragEvent) => void;
  onFileInput: (e: React.ChangeEvent<HTMLInputElement>) => void;
}) {
  return (
    <div
      className={cn(
        "relative rounded-lg border-2 border-dashed p-12 text-center transition-colors",
        dragActive ? "border-foreground bg-accent/50" : "border-border"
      )}
      onDragEnter={onDrag}
      onDragLeave={onDrag}
      onDragOver={onDrag}
      onDrop={onDrop}
    >
      <input
        type="file"
        accept=".json"
        onChange={onFileInput}
        className="absolute inset-0 w-full h-full opacity-0 cursor-pointer"
      />
      <Upload className="mx-auto h-8 w-8 text-muted-foreground" />
      <p className="mt-4 text-sm">Drop file here or click to browse</p>
      <p className="mt-1 text-xs text-muted-foreground">JSON files only</p>
    </div>
  );
}

function FilePreview({ file, onClear }: { file: File; onClear: () => void }) {
  return (
    <div className="flex items-center justify-between rounded-lg border border-border p-3">
      <div className="flex items-center gap-3">
        <File className="h-5 w-5 text-muted-foreground" />
        <div>
          <p className="text-sm">{file.name}</p>
          <p className="text-xs text-muted-foreground">
            {(file.size / 1024).toFixed(1)} KB
          </p>
        </div>
      </div>
      <button
        onClick={onClear}
        className="text-muted-foreground hover:text-foreground"
      >
        <X className="h-4 w-4" />
      </button>
    </div>
  );
}
